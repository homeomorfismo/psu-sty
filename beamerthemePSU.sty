% beamerthemePSU.sty
% Beamer theme for Portland State University

\ProvidesPackage{beamerthemePSU}

% Load essential packages
\usepackage{psu-colors}
\usepackage{psu-logos}
\usepackage{fontspec}

% Define sizes
\def\LogoSize{1cm}


% Set the main font to Acumin Pro
\setmainfont{Acumin Pro}

% Set the color theme
\setbeamercolor{title}{bg=psuGreen, fg=psuWhite}
\setbeamercolor{frametitle}{bg=psuForestGreen, fg=psuWhite}
\setbeamercolor{background canvas}{bg=psuWhite}
\setbeamercolor{normal text}{fg=psuBlack}

% Set the font theme
\setbeamerfont{title}{size=\LARGE, series=\bfseries}
\setbeamerfont{frametitle}{series=\bfseries}
\setbeamerfont{section in toc}{series=\bfseries}

% Set the title page
\defbeamertemplate*{title page}{psu}[1][]{
    \vbox{}
    \vfill
    \begin{centering}
      \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par
      \vskip0.5em
      \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
      \vskip1em
      \usebeamerfont{author}\insertauthor\par
      \vskip1em
      \usebeamerfont{institute}\insertinstitute\par
      \vskip1em
      \usebeamerfont{date}\insertdate\par
      \vskip1em
      \PSULogomarkGreen{\LogoSize} % Insert PSU logomark
    \end{centering}
    \vfill
}

% Set the frame title
\defbeamertemplate*{frametitle}{psu}[1][]{
    \vbox{}
    \vskip1em
    \begin{centering}
        \usebeamerfont{frametitle}\usebeamercolor[fg]{frametitle}\insertframetitle\par
    \end{centering}
    \vskip1em
    \nointerlineskip
}
